@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider Theme="Scotland2025Theme" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />


<MudLayout>
    <MudAppBar Elevation="1"  >
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Scotland 2025</MudText>
        <MudSpacer />
@*        
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
*@    
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="mainContent" MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
        <MudContainer MaxWidth="MaxWidth.Large">
            <PageFooter />
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;


    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }


    MudTheme Scotland2025Theme = new MudTheme()
        {
            PaletteLight = new PaletteLight()
            {
                AppbarText = Colors.Gray.Lighten3, 
                AppbarBackground = Colors.Blue.Darken4,
                Primary = Colors.Blue.Darken4,
            },
    };
}
