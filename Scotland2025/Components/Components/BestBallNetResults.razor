
@if (results == null)
{
    <ResultsNotPosted />
}
else
{
    <MudSimpleTable Class="@TableClass" Dense="true" Bordered="true" Outlined="@true">
        <thead>
            <tr>
                <th class="tableheader" colspan="26" @onclick="(_ => expanded = !expanded)">
                    @title 
                    <MudIcon Icon="@ExpansionIcon" Size="Size.Medium"/>
                </th>
            </tr>
            <tr>

                <th class="posCol">Pos</th>

                <th class="nameCol">Players</th>
                <th class="hcpCol">Hcp</th>
                @if (expanded)
                {
                    <th class="grossCol">1</th>
                    <th class="grossCol">2</th>
                    <th class="grossCol">3</th>
                    <th class="grossCol">4</th>
