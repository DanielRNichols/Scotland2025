                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Hole8)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Hole9)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Front)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Hole10)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Hole11)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Hole12)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Hole13)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Hole14)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Hole15)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Hole16)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Hole17)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Hole18)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Back)</td>
                    }
                    <td class="grossCol">@Utilities.DisplayGross(result.Team.Pos, result.Team.Total)</td>
                    <td class=@($"netCol {Utilities.NetClass(result.Team.Net)}")>@Utilities.DisplayNet(result.Team.Pos, result.Team.Net)</td>

                </tr>
            }
        </tbody>

    </MudSimpleTable>
}

@code {
    [Parameter, EditorRequired] public string title { get; set; } = string.Empty;
    [Parameter, EditorRequired] public IList<BestBallNetTeam>? results { get; set; } = new List<BestBallNetTeam>();
    [Parameter, EditorRequired] public bool roundCompleted { get; set; }

    private bool expanded = false;

    private string TableClass => expanded ? "bestBallNetExpanded" : "bestBallNetCompressed";
    private string TableStyle => expanded ? "width:100%" : "width: 25rem";

    private string ExpansionIcon => expanded ? Icons.Material.Filled.KeyboardDoubleArrowLeft : Icons.Material.Filled.KeyboardDoubleArrowRight;

    private bool ResultsPosted => results != null && results.Sum(r => r.Team.Pos) > 0;

}
