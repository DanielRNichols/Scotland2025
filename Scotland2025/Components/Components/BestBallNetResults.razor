                    <th class="grossCol">Front</th>
                    <th class="grossCol">10</th>
                    <th class="grossCol">11</th>
                    <th class="grossCol">12</th>
                    <th class="grossCol">13</th>
                    <th class="grossCol">14</th>
                    <th class="grossCol">15</th>
                    <th class="grossCol">16</th>
                    <th class="grossCol">17</th>
                    <th class="grossCol">18</th>
                    <th class="grossCol">Back</th>
                }
                <th class="grossCol">Total</th>
                <th class="netCol">Net</th>
                <th class="moneyCol">$</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in results.OrderBy(r => r.Team.Pos))
            {
                <tr class=@($"{result.TeamName}")>

                    <td class="posCol" rowspan="3">@Utilities.DisplayPos(result.Team.Pos)</td>

                    <td class=@($"{result.TeamName} nameCol")>@result.Player1.Name</td>
                    <td class=@($"{result.TeamName} hcpCol")>@result.Player1.Hcp</td>
                    @if(expanded)
                    {
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole1)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole2)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole3)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole4)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole5)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole6)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole7)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole8)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole9)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Front)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole10)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole11)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole12)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole13)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole14)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole15)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole16)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole17)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Hole18)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player1.Back)</td>
                    }
                    <td class="grossCol">@Utilities.DisplayGross(result.Player1.Total)</td>
                    <td class=@($"netCol {Utilities.NetClass(result.Player1.Net)}")>@Utilities.NetDisplay(result.Player1.Net)</td>
                    <td class="moneyCol" rowspan="3">@Utilities.DisplayWinnings(result.Team.Winnings)</td>
                </tr>
                <tr class=@($"{result.TeamName}")>
                    <td class=@($"{result.TeamName} nameCol")>@result.Player2.Name</td>
                    <td class=@($"{result.TeamName} hcpCol")>@result.Player2.Hcp</td>

                     @if(expanded)
                    {
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole1)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole2)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole3)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole4)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole5)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole6)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole7)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole8)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole9)</td>
