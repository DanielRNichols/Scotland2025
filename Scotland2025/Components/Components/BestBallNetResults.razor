                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole10)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole11)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole12)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole13)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole14)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole15)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole16)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole17)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Hole18)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Player2.Back)</td>
                    }
                    <td class="grossCol">@Utilities.DisplayGross(result.Player2.Total)</td>
                    <td class=@($"netCol {Utilities.NetClass(result.Player2.Net)}")>@Utilities.NetDisplay(result.Player2.Net)</td>

                </tr>
                <tr class=@($"{result.TeamName}")>
                    <td colspan="2" style="text-align: left;">Best Ball Net</td>
                    @if(expanded)
                    {
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Hole1)</td>
                        <td class="grossCol">@Utilities.DisplayGross(result.Team.Hole2)</td>
