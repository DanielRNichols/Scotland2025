
@if (results == null)
{
    <ResultsNotPosted />
}
else
{
    <MudSimpleTable Class="chicagoPts" Dense="true" Bordered="true">
        <thead>
            <tr>
                <th class="tableheader expandable" colspan="@(expanded ? "32" : "14")" @onclick="(_ => expanded = !expanded)">
                    @title 
                    <MudIcon Icon="@ExpansionIcon" Size="Size.Medium"/>
                </th>
            </tr>
           <tr>
                <th colspan="3">Matches</th>
                <th colspan="4">2-Man Team</th>
                <th colspan="4">4-Man Team</th>
                <th colspan="1"></th>
            </tr>
            <tr>
                <th>#</th>
                <th class="nameCol">Players</th>
                <th class="hcpCol">Hcp</th>
                <th>Goal</th>
                <th>Pts</th>
                <th>Net</th>
                <th>$</th>
                <th>Goal</th>
                <th>Pts</th>
                <th>Net</th>
                <th>$</th>
                <th class="moneyCol">Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var match in results)
            {
                <tr class="chicagopts">
                    <td rowspan="4">@match.MatchNumber</td>
                    <td class="team1 nameCol">@match.Team1.Player1.Name</td>
                    <td class="team1 hcpCol">@match.Team1.Player1.Hcp</td>
                    <td class="team1" rowspan="2">@match.Team1.Team.Goal</td>
                    <td class="team1" rowspan="2">@DisplayPts(match.Team1.Team.Total)</td>
                    <td class="team1" rowspan="2">@DisplayPts(match.Team1.Team.Net)</td>
                    <td class="team1 moneyCol" rowspan="2">@Utilities.DisplayWinnings(match.Team1.Player1.Money18)</td>
                    <td class="team1" rowspan="2">@TotalTeamGoal(1)</td>
                    <td class="team1" rowspan="2">@DisplayPts(TotalTeamPoints(1))</td>
                    <td class="team1" rowspan="2">@DisplayPts(TotalTeamNet(1))</td>
                    <td class="team1 moneyCol" rowspan="2">@Utilities.DisplayWinnings(match.Team1.Player1.MoneyTeam)</td>
                    <td class="team1 moneyCol" rowspan="2">@Utilities.DisplayWinnings(match.Team1.Player1.MoneyTotal)</td>
                </tr>
                <tr class="chicagopts">
                    <td class="team1 nameCol">@match.Team1.Player2.Name</td>
                    <td class="team1 hcpCol">@match.Team1.Player2.Hcp</td>
                </tr>

                <tr class="chicagopts">
                    <td class="team2 nameCol">@match.Team2.Player1.Name</td>
                    <td class="team2 hcpCol">@match.Team2.Player1.Hcp</td>
                    <td class="team2" rowspan="2">@match.Team2.Team.Goal</td>
                    <td class="team2" rowspan="2">@DisplayPts(match.Team2.Team.Total)</td>
                    <td class="team2" rowspan="2">@DisplayPts(match.Team2.Team.Net)</td>
                    <td class="team2 moneyCol" rowspan="2">@Utilities.DisplayWinnings(match.Team2.Player1.Money18)</td>
                    <td class="team2" rowspan="2">@TotalTeamGoal(2)</td>
                    <td class="team2" rowspan="2">@DisplayPts(TotalTeamPoints(2))</td>
                    <td class="team2" rowspan="2">@DisplayPts(TotalTeamNet(2))</td>
                    <td class="team2 moneyCol" rowspan="2">@Utilities.DisplayWinnings(match.Team2.Player1.MoneyTeam)</td>
                    <td class="team2 moneyCol" rowspan="2">@Utilities.DisplayWinnings(match.Team2.Player1.MoneyTotal)</td>
                </tr>
                <tr class="chicagopts">
                    <td class="team2 nameCol">@match.Team2.Player2.Name</td>
                    <td class="team2 hcpCol">@match.Team2.Player2.Hcp</td>
                </tr>
            }
        </tbody>

    </MudSimpleTable>
}

@code {
    [Parameter, EditorRequired] public string title { get; set; } = string.Empty;
    [Parameter, EditorRequired] public IList<ChicagoPtsMatch>? results { get; set; } = new List<ChicagoPtsMatch>();
    [Parameter, EditorRequired] public bool roundCompleted { get; set; } 
        
    private bool expanded = false;

    private string TableClass => expanded ? "chicagoPtsExpanded" : "chicagoPtsCompressed";

    private string ExpansionIcon => expanded ? Icons.Material.Filled.KeyboardDoubleArrowLeft : Icons.Material.Filled.KeyboardDoubleArrowRight;


    private double TotalTeamPoints(int teamNumber) => teamNumber switch
    {
        1 => results?.Sum(m => m.Team1.Team.Total) ?? 0,
        2 => results?.Sum(m => m.Team2.Team.Total) ?? 0,
        _ => 0
    };
    
    private double TotalTeamGoal(int teamNumber) => teamNumber switch
    {
        1 => results?.Sum(m => m.Team1.Team.Goal) ?? 0,
        2 => results?.Sum(m => m.Team2.Team.Goal) ?? 0,
        _ => 0
    };

    private double TotalTeamNet(int teamNumber) => teamNumber switch
    {
        1 => results?.Sum(m => m.Team1.Team.Net) ?? 0,
        2 => results?.Sum(m => m.Team2.Team.Net) ?? 0,
        _ => 0
    };

    private string DisplayPts(double pts) => roundCompleted ? pts.ToString() : "";

    private bool ResultsPosted => results != null;

}
